<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_b"
    tools:context=".ViewAddedChild">

    <ImageView
        android:id="@+id/image"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/displayName"
        android:layout_width="241dp"
        android:layout_height="31dp"
        android:background="@drawable/rounded_corner"
        android:hint="Name"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/Black"
        android:textColorHint="#eee"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.554" />

    <TextView
        android:id="@+id/displayGender"
        android:layout_width="241dp"
        android:layout_height="31dp"
        android:background="@drawable/rounded_corner"
        android:hint="Gender"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/Black"
        android:textColorHint="#eee"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayEmail"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/displayPhone"
        android:layout_width="241dp"
        android:layout_height="31dp"
        android:background="@drawable/rounded_corner"
        android:hint="Phone Number"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/Black"
        android:textColorHint="#eee"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayGender"
        app:layout_constraintVertical_bias="0.131" />

    <TextView
        android:id="@+id/displayEmail"
        android:layout_width="241dp"
        android:layout_height="31dp"
        android:background="@drawable/rounded_corner"
        android:hint="Email Address"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/Black"
        android:textColorHint="#eee"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayName"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_margin="20dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/rounded_corner"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:text="PROFILE"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="37sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="InvalidId" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Back"
        android:textColor="#000"
        android:background="@drawable/rounded_corner_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayPhone" /><![CDATA[

    Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_button"
        android:padding="10dp"
        android:text="Upload Image"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.793"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintVertical_bias="0.03" />

]]>
</androidx.constraintlayout.widget.ConstraintLayout>